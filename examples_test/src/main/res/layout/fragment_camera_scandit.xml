<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_camera_scandit_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_camera_scandit_instructions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:maxLines="2"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:text="Point the HUD at a barcode or QR code to view it."
        android:textAppearance="@android:style/TextAppearance.Large"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@id/fragment_camera_scandit_image"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/fragment_camera_scandit_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/fragment_camera_scandit_barcode_text"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_camera_scandit_instructions" />

    <ImageView
        android:id="@+id/fragment_camera_scandit_image_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_camera_scandit_image"
        app:layout_constraintLeft_toLeftOf="@id/fragment_camera_scandit_image"
        app:layout_constraintRight_toRightOf="@id/fragment_camera_scandit_image"
        app:layout_constraintTop_toTopOf="@id/fragment_camera_scandit_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_camera_scandit_barcode_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:maxLines="2"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/fragment_camera_scandit_image"
        tools:text="Example Barcode, but really really long so it takes more than 1 line" />


</androidx.constraintlayout.widget.ConstraintLayout>